{% extends 'layout.twig' %}

{% block body %}

  <main class="container mt-5">
    <div class="row">
      <div class="col-md-6 mx-auto">
        <h3 class="text-primary font-montserrat text-uppercase">Reset Your Password</h3>
        <form method="post" action="/reset"> 

		   <div class="form-group">
            <label for="sign_in_username">Email:</label>
            <input type="email" class="form-control" id="sign_in_username" placeholder="Enter email" name="email" autofocus  required>
          </div>
		
          <button type="submit" class="btn btn-primary">Reset</button>
        </form>
      </div>
    </div>
  </main>

{% endblock %}